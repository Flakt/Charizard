<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModel.CommentsFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelle P."
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="165dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mycket goda äpplen mmmmm....."
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="221dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alexander S."
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="71dp"
                tools:layout_editor_absoluteY="270dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jag äter bara pasta med väldigt lite köttfärssås"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="310dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add comment"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="139dp"
                tools:layout_editor_absoluteY="360dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Write something..."
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="392dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                tools:layout_editor_absoluteX="203dp"
                tools:layout_editor_absoluteY="508dp" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</FrameLayout>